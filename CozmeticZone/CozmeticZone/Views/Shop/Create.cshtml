@model ViewComponent

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>

    <form id="addShop" method="post" asp-controller="Shop" asp-action="Save">

        <div class="form-group row">
            <div class="col-lg-6">
                <label for="name-input">Име на магазина</label>
                <input id="name-input" class="col-lg-5 form-control" type="text" name="name" />
            </div>
        </div>

        <hr/>

        <div>
            <h5>Служител</h5>
            <hr/>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label for="employee-name">Име</label>
                    <input id="employee-name" class="col-lg-5 form-control" type="text" name="employeeName" required="true"/>
                </div>`
            </div>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label for="gender">Пол</label>
                    <input id="gender" class="col-lg-5 form-control" type="text" name="gender" required="true"/>
                </div>
            </div>
        </div>

        <hr/>
        <h5>Адрес</h5>
        <hr/>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Държава</label>
                <input class="col-lg-5 form-control" type="text" name="country" required="true"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Град</label>
                <input class="col-lg-5 form-control" type="text" name="city" required="true"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Улица</label>
                <input class="col-lg-5 form-control" type="text" name="street" required="true"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Номер</label>
                <input class="col-lg-5 form-control" type="number" name="number" required="true"/>
            </div>
        </div>

        <br/>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Години</label>
                <input class="col-lg-5 form-control" type="number" name="age" required="true"/>
            </div>
        </div>

        <br/>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Позиция</label>
                <input class="col-lg-5 form-control" type="text" name="position" required="true"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Заплата</label>
                <input class="col-lg-5 form-control" type="number" name="salary" required="true"/>
            </div>
        </div>

        <br/>

        <div class="form-group row">
            <div class="col-lg-6">
                <label>Имейл</label>
                <input class="col-lg-5 form-control" type="text" name="employeeEmail" required="true"/>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-lg-6">
                <label>Телефон</label>
                <input class="col-lg-5 form-control" type="text" name="employeePhone" required="true"/>
            </div>
        </div>

        @* TODO: create a table for adding employees:  *@

        <hr/>

        <div>
            <h5>Поръчки</h5>

            @* NON-EDITABLE: *@
            @* <label>Кредитен лимит</label> *@

            <hr/>

            <h5>Продукт</h5>

            <hr/>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Клиент</label>
                    <input class="col-lg-5 form-control" type="text" name="customerName" required="true"/>
                </div>
            </div>

            <br/>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Код</label>
                    <input class="col-lg-5 form-control" type="number" name="code" required="true"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Брой</label>
                    <input class="col-lg-5 form-control" type="number" name="count" required="true"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Цена</label>
                    <input class="col-lg-5 form-control" type="number" name="price" required="true"/>
                </div>
            </div>   

            <br/>

            @* non-editable *@
            
            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Категория</label>
                    <input class="col-lg-5 form-control" type="text" name="category" required="true"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Описание</label>
                    <input class="col-lg-5 form-control" type="text" name="description" required="true"/>
                </div>
            </div>

            <br/>

            @* TODO: to be calculated  *@
            @* <label>Крайна сума</label> *@
            @* <input type="number" name="totalPrice" readonly="readonly"/> *@

            @* TODO: create a table for adding orders (with products) *@
        </div>

        <hr/>

        <div>
            <h5>Контакти</h5>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Имейл</label>
                    <input class="col-lg-5 form-control" type="text" name="email"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Телефон</label>
                    <input class="col-lg-5 form-control" type="text" name="phone"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>Факс</label>
                    <input class="col-lg-5 form-control" type="number" name="fax"/>
                </div>
            </div>   

        </div>

        <hr/>

        <div>
            <button class="btn" type="submit" onclick="$('#addShop').serialize();">Добави магазин</button>
        </div>


    </form>

</div>

</body>
</html>